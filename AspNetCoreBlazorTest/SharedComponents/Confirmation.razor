<!-- ConfirmationComponent.razor -->
<div class="overlay">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title roboto-medium text-center" id="exampleModalLongTitle">@Header</h5>
			</div>
			<div class="modal-body">
				@Message
			</div>
			<div class="modal-footer">
				<button @onclick="Cancel" type="button" class="btn btn-light roboto-condensed-regular" data-dismiss="modal">Cancel</button>
				&nbsp;
				<button @onclick="Confirm" type="button" class="btn btn-light roboto-condensed-regular">Confirm</button>
			</div>
		</div>
	</div>
</div>
